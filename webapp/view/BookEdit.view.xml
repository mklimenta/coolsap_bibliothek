<mvc:View controllerName="net.bounceme.monkeyCoolSAP-Bibliothek.controller.BookEdit" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" displayBlock="true" xmlns="sap.m" id="editView">
	<App>
		<pages>
			<Page title="{i18n>bookEditTitle}">
				<content>
					<form:SimpleForm editable="true">
						<Label text="ISBN" tooltip="ISBN"/>
						<MaskInput  mask="9999-9999-9" placeholder="Enter ISBN" id="isbn" value="{books>isbn}"/>
						<Label text="Title" tooltip="Title"/>
						<Input
		                    placeholder="Enter title"
		                	id="title" 
		                	value="{books>title}"
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<Label text="Author" tooltip="Author"/>
						<Input
		                    placeholder="Enter author"
		                    value="{books>author}"
		                	id="author" 
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<Label text="Year" tooltip="Year"/>
						<Input
		                    placeholder="Enter publishing year"
		                	id="year" 
		                	value="{books>year}"
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<Label text="Edition" tooltip="Edition"/>
						<Input
		                    placeholder="Enter edition number"
		                	id="edition" 
		                	value="{books>edition}"
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<Label text="Publisher" tooltip="Publisher"/>
						<Input
		                    placeholder="Enter publisher name"
		                	id="publisher" 
		                	value="{books>publisher}"
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<Label text="Language" tooltip="Language"/>
						<Select  id="language">
							<core:Item text="English" />
							<core:Item text="German" />
						</Select>
						<Label text="Category" tooltip="Category"/>
						<Select id="category">
							<core:Item text="Philosophy" />
							<core:Item text="Medicine" />
							<core:Item text="Psychology" />
							<core:Item text="IT" />
						</Select>
						<Label text="Available" tooltip="Available"/>
						<Input
		                    placeholder="Enter amount"
		                	id="available_count" 
		                	value="{books>available_count}"
		                    valueLiveUpdate="true"
		                    width="100%"/>
						<ToolbarSpacer/>
						<Button id="btn1" type="Accept" text="{i18n>bookSaveText}" press=".onSaveBook"></Button>
					</form:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>