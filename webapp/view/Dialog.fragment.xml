<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   controllerName="net.bounceme.monkeyCoolSAP-Bibliothek.controller.Dialog">
   <Dialog id="dialog"
		xmlns="sap.m"
		xmlns:form="sap.ui.layout.form"
		xmlns:mvc="sap.ui.core.mvc"
		title="Add new Book"
		contentHeight="100%"
		contentWidth="40%"
		stretch="{:= ${device>/system/phone}}">
   	    <content>
   	    	<form:SimpleForm editable="true">
				<Label text="ISBN" tooltip="ISBN"/>
				<MaskInput mask="9999-9999-9" placeholder="Enter ISBN"/>
				<Label text="Title" tooltip="Title"/>
				<MaskInput placeholder="Enter title">
				</MaskInput>
				<Label text="Author" tooltip="Author"/>
				<MaskInput placeholder="Enter author">
				</MaskInput>
				<Label text="Year" tooltip="Year"/>
				<MaskInput mask="999999" placeholder="Enter year">
				</MaskInput>
				<Label text="Edition" tooltip="Edition"/>
				<MaskInput placeholder="Enter edition">
				</MaskInput>
				<Label text="Title" tooltip="Title"/>
				<MaskInput placeholder="Enter title">
				</MaskInput>
				<Label text="Publisher" tooltip="Publisher"/>
				<MaskInput placeholder="Enter title">
				</MaskInput>
				<Label text="Language" tooltip="Language"/>
				<Select>
					<core:Item text="English" />
					<core:Item text="Deutsch" />
				</Select>
				<Label text="Category" tooltip="Category"/>
				<Select>
					<core:Item text="Philosophy" />
					<core:Item text="Medicine" />
					<core:Item text="Psychology" />
					<core:Item text="IT" />
				</Select>
				<Label text="Available" tooltip="Available"/>
				<MaskInput mask="999999" placeholder="Enter amount">
				</MaskInput>
			</form:SimpleForm>
   	    </content>
   	    <beginButton>
   	    	<Button
    			text="{i18n>dialogSaveButtonText}"
    			press=".onCloseDialog"/>
   	    </beginButton>
		<endButton>
    		<Button
    			text="{i18n>dialogCloseButtonText}"
    			press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>