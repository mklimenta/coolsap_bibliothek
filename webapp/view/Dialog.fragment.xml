<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:mvc="sap.ui.core.mvc">
   <Dialog id="dialog"
		xmlns="sap.m"
		xmlns:form="sap.ui.layout.form"
		xmlns:mvc="sap.ui.core.mvc"
		title="Add new Book"
		contentHeight="100%"
		contentWidth="40%"
		stretch="{:= ${device>/system/phone}}">
   	    <content>
   	    	<form:SimpleForm editable="true">
				<Label text="ISBN" tooltip="ISBN"/>
				<MaskInput  mask="9999-9999-9" placeholder="Enter ISBN" id="isbn"/>
				<Label text="Title" tooltip="Title"/>
				<MaskInput placeholder="Enter title" id="title">
				</MaskInput>
				<Label text="Author" tooltip="Author"/>
				<MaskInput placeholder="Enter author" id="author">
				</MaskInput>
				<Label text="Year" tooltip="Year"/>
				<MaskInput mask="999999" placeholder="Enter year" id="year">
				</MaskInput>
				<Label text="Edition" tooltip="Edition"/>
				<MaskInput placeholder="Enter edition" id="edition">
				</MaskInput>
				<Label text="Publisher" tooltip="Publisher"/>
				<MaskInput placeholder="Enter publisher" id="publisher">
				</MaskInput>
				<Label text="Language" tooltip="Language"/>
				<Select id="language">
					<core:Item text="English" />
					<core:Item text="Deutsch" />
				</Select>
				<Label text="Category" tooltip="Category"/>
				<Select id="category">
					<core:Item text="Philosophy" />
					<core:Item text="Medicine" />
					<core:Item text="Psychology" />
					<core:Item text="IT" />
				</Select>
				<Label text="Available" tooltip="Available"/>
				<MaskInput mask="999999" placeholder="Enter amount" id="available_count">
				</MaskInput>
			</form:SimpleForm>
   	    </content>
   	    <beginButton>
   	    	<Button id="btn1" type="Accept" text="Save" press=".onAddBook" />
   	    </beginButton>
		<endButton>
    		<Button
    			text="{i18n>dialogCloseButtonText}"
    			press=".onCloseDialog"
    			class="sapUiSmallMarginEnd"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>