<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:mvc="sap.ui.core.mvc" 
   id="fragment">
   <Dialog id="dialog"
		xmlns="sap.m"
		xmlns:form="sap.ui.layout.form"
		xmlns:mvc="sap.ui.core.mvc"
		title="Add new Book"
		contentHeight="100%"
		contentWidth="40%"
		stretch="{:= ${device>/system/phone}}">
   	    <content>
   	    	<form:SimpleForm editable="true">
				<Label text="ISBN" tooltip="ISBN"/>
				<MaskInput  mask="9999-9999-9" placeholder="Enter ISBN" id="isbn"/>
				<Label text="Title" tooltip="Title"/>
				<Input
                    placeholder="Enter title"
                	id="title" 
                    valueLiveUpdate="true"
                    width="100%"/>
				<Label text="Author" tooltip="Author"/>
				<Input
                    placeholder="Enter author"
                	id="author" 
                    valueLiveUpdate="true"
                    width="100%"/>
				<Label text="Year" tooltip="Year"/>
				<Input
                    placeholder="Enter publishing year"
                	id="year" 
                    valueLiveUpdate="true"
                    width="100%"/>
				<Label text="Edition" tooltip="Edition"/>
				<Input
                    placeholder="Enter edition number"
                	id="edition" 
                    valueLiveUpdate="true"
                    width="100%"/>
				<Label text="Publisher" tooltip="Publisher"/>
				<Input
                    placeholder="Enter publisher name"
                	id="publisher" 
                    valueLiveUpdate="true"
                    width="100%"/>
				<Label text="Language" tooltip="Language"/>
				<Select  id="language">
					<core:Item text="English" />
					<core:Item text="German" />
				</Select>
				<Label text="Category" tooltip="Category"/>
				<Select id="category">
					<core:Item text="Philosophy" />
					<core:Item text="Medicine" />
					<core:Item text="Psychology" />
					<core:Item text="IT" />
				</Select>
				<Label text="Available" tooltip="Available"/>
				<Input
                    placeholder="Enter amount"
                	id="available_count" 
                    valueLiveUpdate="true"
                    width="100%"/>
			</form:SimpleForm>
   	    </content>
   	    <beginButton>
   	    	<Button id="btn1" type="Accept" text="Save" press=".onAddBook" />
   	    </beginButton>
		<endButton>
    		<Button
    			text="{i18n>dialogCloseButtonText}"
    			press=".onCloseDialog"
    			class="sapUiSmallMarginEnd"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>